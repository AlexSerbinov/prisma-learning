{
  "name": "prisma-learning",
  "version": "1.0.0",
  "description": "Learning Prisma ORM with PostgreSQL for Node.js interview preparation",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
